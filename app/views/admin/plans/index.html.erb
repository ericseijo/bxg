<h1>Plans</h1>

<table>
  <tr>
    <th>Level</th>
    <th>Price</th>
    <th>Number of releases per month</th>
    <th>Storage space</th>
    <th>Number of user accounts</th>
    <th>Description</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.level %></td>
    <td><%= plan.price %></td>
    <td><%= plan.number_of_releases_per_month %></td>
    <td><%= plan.storage_space %></td>
    <td><%= plan.number_of_user_accounts %></td>
    <td><%= plan.description %></td>
    <td><%= plan.active %></td>
    <td><%= link_to 'Details', admin_plan_path(plan) %></td>
    <td><%= link_to 'Edit', edit_admin_plan_path(plan) %></td>
    <td><%#= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'Create a New Plan', new_admin_plan_path %></p>
