<h1>Add a new client</h1>

<%= form_for [@release, @client], :html => { :multipart => true } do |f| %>

  <p>
    <%= f.label "What is your client's name?" %>
    <%= f.text_field :name %>
  </p>

  <%= fields_for 'logo_file' do |l| %>
    <p>
      <%= l.label "Upload their logo" %>
      <%= l.file_field :logo %>
    </p>
  <% end %>

  <p>
    <%= f.label "Ticker symbol?" %>
    <%= f.text_field :ticker_symbol %>
  </p>

  <p>
    <%= f.label "Website address" %>
    <%= f.text_field :website %>
  </p>

  <p><%= f.submit "Add client" %></p>

<% end %>