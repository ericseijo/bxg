<h1>User Dashboard</h1>
<p>Membership Level: <%= current_user.subscription_level %></p>
<p><%= link_to "New release", new_release_path %></p>

<h1>Relelases</h1>

<table>
  <tr>
    <th>Client</th>
    <th>Release Name</th>
    <th>Status</th>
    <th>Publish Date</th>
    <th>Last Updated</th>
    <th></th>
  </tr>

  <% @releases.each do |release| %>
    <tr>
      <td><%= release.client.name %></td>
      <td><%= release.name %></td>
      <td><%= release.status %></td>
      <td><%= release.publish_date.strftime("%m-%d-%y") %></td>
      <td><%= release.updated_at.strftime("%m-%d-%y") %></td>
      <td><%= link_to 'Details', release_path(release) %></td>
    </tr>
  <% end %>
</table>

<br />
