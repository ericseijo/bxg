<h1>Upload files</h1>

<%= form_tag 'upload', id: 'new_upload' do %>
  <%= file_field_tag :asset, multiple: true, name: "upload[asset]" %>
<% end %>

<div id="assets">
  <%= render :partial => 'asset', :collection => @assets %>
</div>

<div id="preview">
  <%= render @release %>
</div>
<script id="template-upload" type="text/x-tmpl">
  <div class="upload">
    {%=o.name%}
    <div class="progress"><div class="bar" style="width: 0%"></div></div>
  </div>
</script>

<div><%= link_to 'Add distribution list', '#' %></div>